<% layout("./template/boilerplate") %>
<body>
    <div class="rows">
        <div class="col-7 offset-2">
            <h1 class="mb-2"><%=listing.title%></h1>
        <img src="<%=listing.image.url%>" class="card-img-top show-img " alt="listing.image.filename">
         </div>
        
  <div class="card-body col-4 offset-2">
   
         <p class="card-text">Owner is :<%=listing.owner.username%></p>
            <p class="card-text"> <%=listing.description%></p> <br>
         </p><%=listing.price.toLocaleString("en-IN")%> </p>
         <p class="card-text"><%=listing.location%> </p>
         <p class="card-text"><%=listing.country%></p>
   
  </div>
    <% if (currUser && currUser.equals(listing.owner._id)) { %>
    <div class="btns offset-2 mt-3">
    <form action="/listings/<%=  listing._id%>/edit" method="get">
        <button class="btn btn-dark add-btn ">Edit </button>
    </form>
    <form action="/listings/<%=  listing._id%>/delete?_method=DELETE" method="post">
        <button class="btn btn-dark">delete  </button>
    </form>
     </div>
   <% } %>
   </div>
   <br>
   <hr>

   <div class="col-7 offset-2 mb-2 mt-5">
 
     
    <% if (currUser) { %>
     
 
      <h4>Leave a review</h4>
    <form action="/listings/<%=  listing._id%>/reviews" method="POST" novalidate class="needs-validation">
      <div class="mb-2">
        <!-- <label for="rating">Rating</label><br>
     <input type="range" name="review[rating]" id="rating" class="form-range" min="1" max="5"> -->
 <fieldset class="starability-slot">
  <legend>First rating:</legend>
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>

    </div> 
     <div class="mb-2">
      <label for="comment" class="form-label ">Comment</label>
      <textarea name="review[comment]" id="comment" class="form-control" rows="5" cols="30" required></textarea>
      <div class="valid-feedback">You are good to go</div>
      <div class="invalid-feedback">you need to add a comment to give review</div>
    </div>
     <button class="btn btn-outline-dark">Submit</button>
     
<hr>
   <% } %>
    </form>
   
   </div>

   <br>
   

   <div class="reviews col-9 rows-2 offset-2 mb-2 mt-5">
     <% if( listing.reviews !=" ") {%>
       <h4>All reviews</h4>
  
    <% for(review of listing.reviews) {%>
      <div class="card col-md-6 mb-3">
        <div class="card-body">
          <div class="card-title"><%= review.author.username %></div>
          <div class="card-title"> <%= review.comment %></div>
          <div class="card-title"><%=  review.rating %> Star</div>
           
        </div>

          <!-- <form class="mt-2 m-3" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="post">
        <button  class="btn-sm btn-dark " > Delete</button>
       </form> -->
       <form class="mt-2 m-3" 
      action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" 
      method="POST">
  <button class="btn-sm btn-dark">Delete</button>
</form>
      </div>
     
    
      <% }%>

      <% }%>
   
   </div>
</body>


