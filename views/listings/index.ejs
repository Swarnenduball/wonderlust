<% layout("./template/boilerplate") %>
<body>
  <style>
    .filters{
      display: flex;
      gap: 1rem;
      flex-wrap: nowrap;
    }
    .filters .filter div{
      font-size: 1.1rem;
    }
    .filters .filter {
      text-align: center;
      opacity: 0.8;
      margin-right: 1rem;
      margin-left: 1rem;
    }
     .filters .filter:hover {
      
      opacity: 1;
    }
    .mini-nav{
      display: flex;
      align-items: center;
    }
    .form-check-reverse input {
      font-size: 1.5rem;
    }
    .form-check-reverse  label{
      font-size: 1.2rem;
    }
    .gst-info{
      display: none;
    }
    #toggle-switch{
      border: 1px solid black;
      width: fit-content;
      height: 3.5rem;
      padding: .5rem 5rem;
      border-radius: 25px;
      padding-left: 1rem;
      
    }

  </style>
  <h1><%= success%></h1>
   <div class="mini-nav mb-3 m">
  <div class="filters flex-grow-1">
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <div>rooms</div>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-house-chimney"></i></div>
      <div>house</div>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <div>mountain</div>
    </div>
    <div class="filter">
      <div><i class="fa-regular fa-snowflake"></i></div>
      <div>arctic</div>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <div>camping</div>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-ship"></i></div>
      <div>ship</div>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-water"></i></div>
      <div>beach</div>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tree"></i></div>
      <div>forest</div>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-beer-mug-empty"></i></div>
      <div>casual</div>
    </div>
    

  
  </div>

    <div class="form-check-reverse form-switch ms-auto flex-shrink-0" id="toggle-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Default switch checkbox input</label>
</div>
</div>
  


   <div class="row  row-cols-lg-3 row-cols-md-2 row-cols-sm-1  ">
    
    <% for (listing of allListings) {%>
      
    <div class="card listing-card " >
 <a href="/listings/<%=listing._id %>" >
  <img src="<%=listing.image.url %>" class="card-img-top" alt="<%=listing.image.filename %>">
   <div class="card-img-overlay">
    <h5 class="card-title"><%=listing.title %></h5>
    <p class="card-text"><%=listing.description %></p>
    <p class="card-text"><%=listing.country %></p>
  </div>
  <div class="card-body">
    <p class="card-text"> <b><%=listing.title %></b>  </p>
      
        <p><%=listing.price.toLocaleString("en-IN") %>/night <i class="gst-info"> +18% gst</i></p>
        
    
  
  </div>
  </a>
</div>
 <% } %>
   </div>


    <!-- <% for (listing of allListings) {%>
        <li><a href="/listings/<%=listing._id%>"><%=listing.title%></a></li>
        
        <% } %> -->
</body>
<script>
  let tglSwitch=document.querySelector("#toggle-switch");
  tglSwitch.addEventListener("click",()=>{
    let taxInfo=document.querySelectorAll('.gst-info')
    for(btn of taxInfo){
      if( btn.style.display!='inline'){
       btn.style.display='inline'
      }
      else{
        btn.style.display='none'
      }
    }
  })
</script>
