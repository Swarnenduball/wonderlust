<% layout("./template/boilerplate") %>
<body>
   

    <div class="row  ">
        <div class="col col-8 offset-2">
    <form action="/listings/new" method="post" class="needs-validation" novalidate>
         <h1>Add New Listing</h1>


     <div class="mb-3">
    <label for=" title" class="form-label">Title</label>
    <input type="text" id="title" class="form-control" name="listing[title]" placeholder="Add Title" required>
     <div class="valid-feedback"> You are good to go</div>
     <div class="invalid-feedback"> Please Enter the title</div>
    </div>
    
    <div class="mb-3">
    <label class="form-label" for="description" >Description</label>
    <textarea id="description" class="form-control" name="listing[description]" rows="4" placeholder="Add Description" required></textarea>
     <div class="valid-feedback"> You are good to go</div>
     <div class="invalid-feedback"> Please Enter the Description</div>
</div>
    
    <div class="mb-3">
     <label for="img-url" class="form-label">Image URL</label>
  <input type="text" id="img-url" class="form-control" name="listing[image][url]" placeholder="Enter your image url" required>
   <div class="valid-feedback"> You are good to go</div>
     <div class="invalid-feedback"> Please Enter the Image url</div>
</div>
       
       
      <div class="mb-3">
       <label for="filename" class="form-label">Image filename</label>
    <input type="text" id="filename" class="form-control" name="listing[image][filename]" value="<%=  listing.image.filename%>">
        <div class="valid-feedback"> You are good to go</div>
     <div class="invalid-feedback"> Please Enter image file name</div>
</div>
       <div class="mb-3">
    <label for="price" class="form-label" >Price (â‚¹)</label>
    <input type="number" id="price" class="form-control" name="listing[price]" placeholder="1500" required>
    <div class="valid-feedback"> You are good to go</div>
     <div class="invalid-feedback"> Please Enter the Price or we wont able to continue</div>
</div>

   
<div class="mb-3">
    <label for="location" class="form-label" >Location</label>
    <input type="text" class="form-control" name="listing[location]" id="location" placeholder="Delhi" required>
 <div class="valid-feedback"> You are good to go</div>
     <div class="invalid-feedback"> Please Enter the location of the house</div>
</div>
  
    <div class="mb-3">
    <label for="country" class="form-label">Country</label>
    <input id="country" class="form-control" type="text" name="listing[country]" required placeholder="india" required>
  <div class="valid-feedback"> You are good to go</div>
     <div class="invalid-feedback"> Please Enter the country</div>
</div>
    

    <button type="submit" class=" btn btn-dark add-btn mb-3">Create Listing</button>
    

    </form>
    </div>
    </div>
</body>
